<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= titulo || 'Lista de Casas - Examen' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      font-size: 0.9rem;
    }

    .navbar {
      background-color: #343a40;
    }

    .navbar-brand, .navbar-text, .btn-logout {
      color: #fff !important;
      font-size: 0.9rem;
    }

    .btn-logout {
      background-color: transparent;
      border: 1px solid #fff;
      padding: 0.3rem 0.9rem;
      border-radius: 20px;
      font-size: 0.85rem;
    }

    .container {
      margin-top: 1.5rem;
    }

    .table-container {
      background: #fff;
      border: 1px solid #dee2e6;
      border-radius: 0.5rem;
      padding: 1rem;
    }

    .table th, .table td {
      padding: 0.4rem 0.5rem;
      vertical-align: middle;
    }

    .table th {
      background-color: #f1f3f5;
      font-weight: 500;
      font-size: 0.85rem;
    }

    .house-image {
      width: 60px;
      height: 45px;
      object-fit: cover;
      border-radius: 4px;
    }

    .price-badge {
      font-weight: 500;
      font-size: 0.9rem;
      color: #212529;
    }

    .username-row {
      background-color: #eef6ff;
    }

    .no-data {
      text-align: center;
      padding: 2rem 0;
      color: #adb5bd;
      font-size: 0.95rem;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <span class="navbar-text me-3">Bienvenido, <strong><%= usuario.nombre || usuario.username %></strong></span>
      <div class="navbar-nav ms-auto">
        <a href="/auth/logout" class="btn btn-logout">Cerrar Sesi√≥n</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <!-- Tabla de Casas -->
    <div class="table-container">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <% if (casas && casas.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-hover table-sm">
            <thead>
              <tr>
                <th>ID</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Valor</th>
                <th>Usuario</th>
              </tr>
            </thead>
            <tbody>
              <% casas.forEach(function(casa) { %>
                <tr class="<%= casa.username === 'marcelo' ? 'username-row' : '' %>">
                  <td><%= casa.id %></td>
                  <td>
                    <% if (casa.imagenURL) { %>
                      <img src="<%= casa.imagenURL %>" class="house-image" onerror="this.src='https://via.placeholder.com/60x45?text=No+Img'">
                    <% } else { %>
                      <div class="house-image bg-light d-flex justify-content-center align-items-center text-muted">N/A</div>
                    <% } %>
                  </td>
                  <td>
                    <%= casa.nombre %>
                    <% if (casa.username === 'marcelo') { %> <span class="text-muted">(Examen)</span> <% } %>
                  </td>
                  <td class="price-badge">$<%= casa.valor.toLocaleString() %></td>
                  <td><%= casa.username %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="no-data">No hay casas registradas.</div>
      <% } %>
    </div>
  </div>
</body>
</html>
